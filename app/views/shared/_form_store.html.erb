
<%= simple_form_for(@store) do |f| %>
  <%= f.input :name, placeholder: "Digite o nome de sua loja", label: 'Nome' %>
  <%= f.input :address, placeholder: "Rua das Pitangueiras, 10", label: 'Endereço' %>
  <%= f.input :city, placeholder: "São Paulo", label: 'Cidade' %>
  <%= f.input :zipcode, placeholder: "07072-010", label: 'Código Postal' %>
  <%= f.input :days_of_week_opened, as: :check_boxes, collection: [["Segunda-feira", 1], ["Terça-feira", 2], ["Quarta-feira", 3], ["Quinta-feira", 4], ["Sexta-Feira", 5], ["Sábado", 6], ["Domingo",7]], checked: @store.days_of_week_opened, label: 'Dias da Semana Abertos' %>
  <%= f.input :delivery_product, label: 'Entrega em casa?' %>
  <%= f.input :maximum_distance_to_deliver_km, placeholder: "5", label: 'Distância Máxima de Entrega' %>
  <%= f.input :opened_time, label: 'Abre às' %>
  <%= f.input :closed_time, label: 'Fecha às' %>
  <%= f.button :submit, 'Criar Loja', class: "btn btn-primary"  %>
<% end %>
