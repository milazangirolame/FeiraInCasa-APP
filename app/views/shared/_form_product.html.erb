<%= simple_form_for(@product) do |f| %>
  <%= f.input :name, placeholder: "Digite o Nome do Seu Produto:", label: 'Nome' %>
  <%= f.input :category, collection: Product::CATEGORIES, label: 'Categoria'  %>
  <%= f.input :price, placeholder: "00.00", label: 'Preço' %>
  <%= f.input :unity, collection: [ "unidade", "grama", "kilo", "litro", "dúzia"], label: 'Unidade' %>
  <%= f.input :photos, as: :attachinary, label: 'Imagem' %>
  <%= f.button :submit, 'Criar Produto', class: "btn btn-primary"  %>
<% end %>
