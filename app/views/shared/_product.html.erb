<% products = @store.products %>
<% products.each do | product| %>
  <div class="message">
    <% photo = product.photos.first %>
    <% if photo %>
      <%= cl_image_tag(photo.path, class: "avatar-large") %>
    <% end %>
    <div class="message-body">
      <p><strong><%=product.category%></strong></p>
      <h6><%=product.name%></h6>
    </div>
    <div class="message-body">
      <p><strong>Unidade</strong></p>
      <h6><%=product.unity%></h6>
    </div>
    <div class="message-body">
      <p><strong>Pre√ßo</strong></p>
      <h6>R<%=number_to_currency product.price%></h6>
    </div>
    <div class="message-body">
      <p><i class="fa fa-cart-arrow-down title" aria-hidden="true"></i></p>
      <%= link_to more_cart_items_path(current_user.current_cart, product_id: product.id), remote: true, method: :post do %>
          <i class="fa fa-plus-circle icon"></i>
      <% end %>
      <%= link_to less_cart_items_path(current_user.current_cart, product_id: product.id), remote: true, method: :post do %>
          <i class="fa fa-minus-circle icon"></i>
      <%end%>
      <%= link_to cart_items_path(current_user.current_cart, product_id: product.id), remote: true, method: :delete do %>
          <i class="fa fa-times-circle icon"></i></p>
      <%end%>
    </div>
  </div>
<% end %>

