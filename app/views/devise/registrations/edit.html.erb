<div class="login">
<div class="container">
  <div class="col-md-offset-3 col-md-6">
    <h2>Perfil</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Aguardando confirmação para: <%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :firstname, required: true, autofocus: true, label: 'Nome' %>
        <%= f.input :lastname, required: true, autofocus: true, label: 'Sobrenome' %>
        <%= f.input :address, autofocus: true, label: 'Endereço' %>
        <%= f.input :zipcode, autofocus: true, label: 'Código Postal' %>
        <%= f.input :city, autofocus: true, label: 'Cidade' %>
        <%= f.input :email, required: true, autofocus: true %>

        <%= f.input :password, autocomplete: "off", hint: "deixe em branco se você não quer mudar", required: false, label: 'Senha' %>
        <%= f.input :password_confirmation, required: false, label: 'Confirmação de Senha' %>
        <%= f.input :current_password, hint: "precisamos da sua senha para confirmar as alterações", label: 'Senha Atual', required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Atualizar" %>
      </div>
    <% end %>

    <h3>Cancelar Minha Conta</h3>

    <p>Não gostou? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

    <%= link_to "Voltar", :back %>
  </div>
</div>
</div>

