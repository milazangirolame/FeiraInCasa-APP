<div class="container">
  <div class="row">
    <div class= "col-xs-12 col-md-4">
      <div class="card">
        <h3> <%= @store.name %> </h3>
        <h3><p><strong>Feirante:</strong></p>
            <%= @store.user.first_name%> <%= @store.user.last_name%></h3>
        <h4><strong>Endere√ßo:<%= @store.address %></h4>
        <h4><strong>Cidade:</strong><%= @store.city %></h4>
        <h4><strong>Aberto em:</strong><%= @store.days_of_week_opened %></h4>
        <h4><strong>Abre em:</strong><%= @store.opened_time %></h4>
        <h4><strong>Fecha em:</strong><%= @store.closed_time %></h4>
        <h4><strong>Faz entrega:</strong><%=@store.delivery_product %></h4>
        <%if current_user == @store.user %>
          <%= link_to edit_store_path(@store) do %>
            <i class="fa fa-pencil icon" aria-hidden="true"></i>

          <%end%>
        <%end%>
      </div>
    </div>
    <div class= "col-xs-12 col-md-8">
    <div class="card"> Produtos
      <% @store.products.each do |product| %>
      <div class="product">
      <% render: "form_product" %>
      <div class="product-cart">
        <i class="fa fa-cart-arrow-down" aria-hidden="true"></i><p>
        <%= link_to more_cart_itens_path(current_user.current_cart, product_id: product.id), remote: true, method: :post do %>
            <i class="fa fa-plus-circle"></i>
        <% end %>
        <%= link_to less_cart_itens_path(current_user.current_cart, product_id: product.id), remote: true, method: :post do %>
            <i class="fa fa-minus-circle"></i>
        <%end%>
        <%= link_to cart_itens_path(current_user.current_cart, product_id: product.id), remote: true, method: :delete do %>
            <i class="fa fa-times-circle"></i>
        <% end %>
      </div>
      </div>
      <%end%>
    </div>
   </div>
  </div>
 </div>
</div>


