<div class="container">
  <div class="cards">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h3> <%= @store.name %> </h3>
        <h3><strong>Feirante:</strong><%= @store.user.first_name%></h3>
        <h4><strong>Endereço:<%= @store.address %></strong></h4>
        <h4><strong>Cidade:<%= @store.city %></strong></h4>
        <h4><strong>Aberto em:<%= @store.days_of_week_opened %></strong></h4>
        <h4><strong>Abre em:<%= @store.opened_time %></strong></h4>
        <h4><strong>Fecha em:<%= @store.closed_time %></strong></strong></h4>
        <h4><strong>Faz entrega:<%=@store.delivery_product %></strong></h4>
      </div>

      <div class="col-xs-12 col-md-6"> Produtos
        <% @store.products.each do |product| %>
            <div class="product-thumb">
              <img src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan"></div>

             <div class="product">
              <h3><%=product.category%></h3>
              <p><%=product.name%></p>
              <p><strong>Unidade</strong></p>
              <p><%=product.unity%></p>
              <p><strong>Preço</strong></p>
              <p><%=product.price%></p>
            </div>

            <div class="product-cart">
            <i class="fa fa-cart-arrow-down" aria-hidden="true">  </i>
            <p class="price"> +   / - </p>
            </div>
            <% if current_user == @store.user %>
            <%= link_to "Editar", edit_product_path, class: "btn btn-primary btn-lg" %>

            <%end%>
        <%end%>
      </div>

      <%if current_user == @store.user %>
      <div class="row">
        <%= link_to "Adicionar produtos a loja", new_product_path, class: "btn btn-primary btn-lg" %>
      </div>
      <% end %>
   </div>
  </div>
</div>


